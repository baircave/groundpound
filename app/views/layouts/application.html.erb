<!DOCTYPE html>
<html>

  <head>
    <title>Groundpound</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag asset_path('groundpound_teal_no_wordmark_square.png'), :rel => 'icon', :type =>  'image/ico' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <script type="text/javascript">
    window.gp_logo = "<%= image_url('groundpound_teal_no_wordmark.png') %>"
    window.gp_logo_wordmark = "<%= image_url('groundpound_logo_teal.png') %>"
    window.gp_square = "<%= image_url('groundpound_teal_no_wordmark_square.png') %>"
    window.pause = "<%= image_url('pause.png') %>"
    window.play_button = "<%= image_url('play-button.png') %>"
    window.previous_track = "<%= image_url('previous-track.png') %>"
    window.skip_track = "<%= image_url('skip-track.png') %>"
    window.nothing_to_hear = "<%= image_url('nothing-to-hear.png') %>"
    window.track_loading = "<%= image_url('track_loading.gif') %>"
    window.no_comments = "<%= image_url('no_comments.png') %>"

  </script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/wavesurfer.js/2.0.6/wavesurfer.min.js"></script>


  <body>
    <%= yield %>
  </body>
</html>
